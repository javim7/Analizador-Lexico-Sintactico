let digit = [0-9]
let letter = [a-zA-Z]
let whitespace = [\t\n\r]

rule main [input] =
    | digit+ { printf("DIGIT: %s\n", yytext); }
    (* matching letters *)
    | letter+ { printf("LETTER: %s\n", yytext); }
    (* matching floats *)
    | digit+.digit+ { printf("FLOAT: %s\n", yytext); }
    (* matching IDs *)
    | letter(letter|digit)* { printf("ID: %s\n", yytext); }
    | whitespace

